@model IEnumerable<CMSMvcApplication.CatListingServiceReference.Category>
@{
    ViewBag.Title = "Index";
}

<h1 class="margin15">Categories <span><a href="@Url.Action("create")"><img src="Content/images/cms/addNew.gif"></a></span></h1>

<table class="cmsTable">
    @{
        if(Model.Count() > 0)
        { 
            <thead>
                <tr style="background-color:#fff;">
                    <th>Title</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var cat in Model)
                {
                    <tr>
                        <td width="415">&nbsp; @cat.CategoryName</td>
                        <td width="100"><a href=@Url.Action("edit",new{id=cat.CategoryId})><img src="~/Content/images/cms/edit.png"></a></td>
                        <td width="100"><a href=@Url.Action("delete",new{id=cat.CategoryId})><img src="Content/images/cms/delete.png"></a></td>
                        <td width="100"> <a href="http://localhost:51219/categories/browse?cID=@cat.CategoryId"><img src="Content/images/cms/view.png"> </a></td>
                    </tr>
                }
        

            </tbody>
        }
        else
        { 
            <p>No Categories</p>
        }
    }
</table>
