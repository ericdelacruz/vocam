@model IEnumerable<SODAMvcApplication.Models.SiteMapModel>
@{
    ViewBag.Title = "sitemap";
}


<div class="commonSection" style="background-image:none;">
    <div class=" container row">
        <div class="col-md-12">

            <div class="marginCommon contactFormCont border">
                <div class="contentHeading videoHead headCommonh1"> SafetyOnDemand.com Site Map</div>
                <div style="padding:4%;">
                    <p style="font-weight:bold;"><a href="http://sac-iis.com/">Home</a></p>
                    <p style="font-weight:bold;"><a href="http://www.sac-iis.com/categories">Categories</a></p>
                    @foreach (var cat in Model)
{
                    <p style="margin-left:20px;"><a href="@Url.Action("Browse", "categories", new { cat = cat.CatName.Trim().Replace(" ", "-").ToLower() })">@cat.CatName </a></p>
    if (cat.Titles != null)
    {
        foreach (var title in cat.Titles)
        {
                                <p style="margin-left:40px;"> - <a href="@Url.Action("Details", "categories", new { id = title.Trim().Replace(" ", "-").ToLower(),catid=cat.CatId })">@title</a></p>
                            }
                        }
                    }
                    <p style="font-weight:bold;"><a href="http://www.sac-iis.com/home/learnmore">Learn More</a></p>
                    <p style="font-weight:bold;"><a href="http://www.sac-iis.com/home/contact">Contact</a></p>
                    <p style="font-weight:bold;"><a href="http://www.sac-iis.com/home/sitemap">Sitemap</a></p>
                    <p style="font-weight:bold;"><a href="http://www.sac-iis.com/home/legals">Legals</a></p>
                </div>
            </div>
        </div>

    </div>

</div>