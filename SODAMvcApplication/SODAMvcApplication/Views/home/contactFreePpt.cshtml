@{
    ViewBag.Title = "contactFreePpt";
}
@using Recaptcha.Web.Mvc;
@using(@Html.BeginForm("thankyou", "home", FormMethod.Post, new { @class = "contactFormPop" }))
{ 

    <label>Name*</label><input type="text" style="width:300px;" class="form-control" name="name" required>
    <br>

    <label>Company*</label><input type="text" style="width:300px;" class="form-control" name="company" required>
    <br>

    <label>Phone*</label><input type="text" style="width:300px;" class="form-control" name="phone" required>
    <br>

    <label>Email*</label><input type="text" style="width:300px;" class="form-control" id="email" name="" required>
    <br>

    <label>Postcode / Area / Zip*</label><input type="text" style="width:300px;" class="form-control" id="" name="postcode" required>
    <br>

    <label>Select Powerpoint</label>
    <select style="width:305px;" class="form-control" id="" name="selectppt">
        <option value="industrial">Industrial Induction Powerpoint</option>
        <option value="office">Office Induction Powerpoint</option>
        <option value="warehouse">Warehouse Induction Powerpoint</option>

    </select>

    <div align="center"><img style="border-width:0px;" src="http://www.safety-tv.com//VerificationCode.ashx" id=""></div>
    <label>Verification code*</label>
    <input type="text" style="width:300px;" class="form-control" id="" name="captcha" required>
    <br><br>
    @Html.Recaptcha()
    <button class="btn btn-lg btn-primary btn-block" style="width:50%; margin-left:158px;" type="submit">Submit</button>

}