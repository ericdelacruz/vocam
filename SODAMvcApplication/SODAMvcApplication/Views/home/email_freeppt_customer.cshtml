@{
    Layout = null;
    Response.ContentType = "text/plain";
    var Customer = ViewData["Contact"] as SODAMvcApplication.CMSServiceReference.Contact;
    var key = ViewData["key"] as string;
    var selected = ViewData["selected"] as string;
    var url = Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("download", new { key = key, selected = selected });
    //var dlLink = ViewData["DLink"] as string;
}
