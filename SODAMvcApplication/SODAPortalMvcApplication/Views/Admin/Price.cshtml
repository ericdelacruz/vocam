@model IEnumerable<SODAPortalMvcApplication.PortalServiceReference.Price>
@{
    ViewBag.Title = "Price";
}

<div class="portalWrap border">
    
    @RenderPage("adminmenu.cshtml")

    <div class="portalCont margin15">
        <h2>Price <span><a href="@Url.Action("addprice")"><img alt="add new" src="~/Content/images/portal/addNew.gif"></a></span></h2>
        <p>&nbsp;</p>

        <table class="portTable">
            @{ if (Model.Count() > 0)
             {
                <thead>
                    <tr style="background-color:#ffffff;">

                        <th>Region</th>
                        <th>Price</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var price in Model)
                    {

                        <tr>
                            <td width="200">@price.RegionName</td>
                            <td width="170">@price.PriceAmt</td>
                            <td width="100"><a href=@Url.Action("editprice",new{id=price.Id})><img alt="edit" src="~/Content/images/portal/edit.png"></a></td>
                            <td width="100"><a href=@Url.Action("deleteprice",new{id=price.Id})><img alt="delete" src="~/Content/images/portal/delete.png"></a></td>
                        </tr>
                    }


                </tbody>
             }
             else
             {
                <p class="noDisplay">No Price Record!</p>
             }
            }
        </table>
    </div>
</div>
