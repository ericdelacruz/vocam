@{
    ViewBag.Title = "addMarketer";
}


<div class="portalWrap border">

    @RenderPage("adminmenu.cshtml")

    <div class="portalCont margin15">
        <h2>Add Marketer</h2>
        @using (Html.BeginForm("addmarketer", "admin", FormMethod.Post, new { @class = "portalForm" }))
        {
            @Html.ValidationSummary()
            <label><b>First Name</label>
            <input type="text" class="form-control" name="FirstName" required />
            <label>Last Name</label>
            <input type="text" class="form-control" name="LastName" required />
            <label>Birthdate</label>
            <input type="text" id="popupDatepicker" class="form-control" placeholder="Click to choose date" name="datefrom">
            <label>Contact No</label>
            <input type="text" class="form-control" name="ContacNo" />
            <label>Address</label>
            <input type="text" class="form-control" name="Address" />
            <label>Email Address</label>
            <input type="text" class="form-control" name="Email" required />
            <label>Password</label> 
            <input class="form-control" id="Password" name="Password" placeholder="Password" type="password" required />
            <label>Confirm Password</label>
            <input class="form-control" id="rePassword" name="rePassword" placeholder="Re-type Password" type="password" required />
            <button class="btnSubmit btn btn-lg btn-primary btn-block" type="submit">PUBLISH</button>
            <p>&nbsp;</p>
           

        }
    </div>
</div>