@{
    ViewBag.Title = "addMarketer";
}


<div class="portalWrap border">

    @RenderPage("adminmenu.cshtml")

    <div class="portalCont margin15">
        <h2>Edit Sales</h2>
        @using (Html.BeginForm("addmarketer", "admin", FormMethod.Post, new { @class = "portalForm" }))
        {

            <label><b>First Name</label>
            <input type="text" class="form-control" value="">
            <label>Last Name</label>
            <input type="text" class="form-control" value="">
            <label>Birthdate</label>
            <select class="form-control" id="date" name="dd"></select>
            <select class="form-control" id="month" name="mm"></select>
            <select class="form-control" id="year" name="yyyy"></select>
            <script type="text/javascript">date_populate("date", "month", "year");</script>
            <br>

            <label>Contact No</label>
            <input type="text" class="form-control" value="">
            <label>Address</label>
            <input type="text" class="form-control" value="">
            <label>Email Address</label>
            <input type="text" class="form-control" value="">
            <button class="btnSubmit btn btn-lg btn-primary btn-block" type="submit">PUBLISH</button>
            <br><br>
            <p style="clear:both;"><br>A verification email will be sent to the user for verification.</p>

        }
    </div>
</div>