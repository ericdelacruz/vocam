
@{
    //model is not list
    ViewBag.Title = "EditMarketer";
   
}

<div class="portalWrap border">

    @RenderPage("adminmenu.cshtml")

    <div class="portalCont margin15">
        <h2>Edit Marketer</h2>
        @using (Html.BeginForm("editmarketer", "admin", FormMethod.Post, new { @class = "portalForm" }))
        {

            <label><b>First Name</label>
            <input type="text" class="form-control" value="Ben">
            <label>Last Name</label>
            <input type="text" class="form-control" value="James">
            <label>Birthdate</label>
            <select class="form-control" id="date" name="dd"></select>
            <select class="form-control" id="month" name="mm"></select>
            <select class="form-control" id="year" name="yyyy"></select>
            <script type="text/javascript">date_populate("date", "month", "year");</script>
            <br>

            <label>Contact No</label>
            <input type="text" class="form-control" value="09271234567">
            <label>Address</label>
            <input type="text" class="form-control" value="216D Kalaayan St. Taguig City">
            <label>Email Address</label>
            <input type="text" class="form-control" value="benjames@gmail.com">
            <label>Password</label> 
            <input class="form-control" id="Password" name="Password" placeholder="Password" type="password" />
            <label>Confirm Password</label>
            <input class="form-control" id="rePassword" name="rePassword" placeholder="Re-type Password" type="password" />
            <button class="btnSubmit btn btn-lg btn-primary btn-block" type="submit">UPDATE</button>
            <br><br>
         

        }
    </div>
</div>
