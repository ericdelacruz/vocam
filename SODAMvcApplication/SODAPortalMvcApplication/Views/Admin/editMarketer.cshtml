@model SODAPortalMvcApplication.AccountServiceRef.Account
@{
    //model is not list
    ViewBag.Title = "EditMarketer";
   
}

<div class="portalWrap border">

    @RenderPage("adminmenu.cshtml")

    <div class="portalCont margin15">
        <h2>Edit Marketer</h2>
        @using (Html.BeginForm("editmarketer", "admin", FormMethod.Post, new { @class = "portalForm" }))
        {

            <label><b>First Name</label>
            <input type="text" class="form-control" value="@Model.FirstName">
            <label>Last Name</label>
            <input type="text" class="form-control" value="@Model.LastName">
            <label>Birthdate</label>
            <label>@string.Format("{0:dd/MM/yyyy}",Model.Birthdate)</label>
            <select class="form-control" id="date" name="dd"></select>
            <select class="form-control" id="month" name="mm"></select>
            <select class="form-control" id="year" name="yyyy"></select>
            <script type="text/javascript">date_populate("date", "month", "year");</script>
            <br>

            <label>Contact No</label>
            <input type="text" class="form-control" value="@Model.ContactNo">
            <label>Address</label>
            <input type="text" class="form-control" value="@Model.Address">
            <label>Email Address</label>
            <input type="text" class="form-control" value="@Model.Email">
            
         

        }
    </div>
</div>
