@model IEnumerable<SODAPortalMvcApplication.ViewModel.SalesViewModel>
@{
    //Model is List types
    ViewBag.Title = "Sales";
}

<div class="portalWrap border">
    
    @RenderPage("adminmenu.cshtml")

    <div class="portalCont margin15">
        <h2>Sales <span><a href="@Url.Action("AddSale")"><img src="~/Content/images/portal/addNew.gif"></a></span></h2>
        <p>&nbsp;</p>

        <table class="portTable">
        @{ if (Model.Count() > 0)
            {
            <thead>
                <tr style="background-color:#ffffff;">

                    <th>Full Name</th>
                    <th>Company</th>
                    <th>Sales Code</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var salesperson in Model)
                {
                    <tr>
                        <td width="200">@salesperson.account.FirstName @salesperson.account.LastName</td>
                        <td width="170">@salesperson.account.Company</td>
                        <td width="100">@salesperson.salesCode.Sales_Code</td>
                        <td width="100"><a href=@Url.Action("editsale", new { id = salesperson.salesPerson.Id})><img alt="Edit" src="~/Content/images/portal/edit.png"></a></td>
                        <td width="100"><a onclick="return confirm('Are you sure you want to delete the item?');" href=@Url.Action("deletesale", new { id = salesperson.salesPerson.Id})><img alt="delete" src="~/Content/images/portal/delete.png"></a></td>
                    </tr>
                }


            </tbody>
            }
            else
            {
            <p class="noDisplay">No Sales Record!</p>
            }
          }


        </table>


    </div>
</div>
