@{
    ViewBag.Title = "indexpurchase";
    var SalesCode = Session["SalesCode"] as SODAPortalMvcApplication.ViewModel.VerifyModel;
    var username = Session["Username"].ToString().Substring(0, Session["Username"].ToString().IndexOf('@'));
    
}



<div class="container row portalContainer">

    <div class="portalWrap displayInline border">
        <div class="fr">
            <div class="logoutSec fr clearfix">@Html.ActionLink("Hi! " + username + " (Logout)", "logout", "home")</div>
        </div>

        <div class="portalCont margin15">
            
           
            <div class="form-group">
                @using(@Html.BeginForm("verify","user"))
                { 
                 
                    <img src="/Content/images/portal/step1.jpg" alt="Step 1: Enter Your Sales Code">
                    <label>Sales Code: </label><input type="text" name="salesCode" required class="form-control" value="" style="margin-right:5px;">
                    <button type="submit" class="btn btn-default fl">Verify</button>
                    
                }
            </div>

          

            @if(SalesCode != null)
            { 
            
               
                 
                var culture = SODAPortalMvcApplication.ViewModel.VerifyModel.getCultureInfo((SODAPortalMvcApplication.ViewModel.VerifyModel.Currency)(Enum.Parse(typeof(SODAPortalMvcApplication.ViewModel.VerifyModel.Currency),SalesCode.region.Currency)));
              <p>&nbsp;</p>
                        
               @*<p>@DiscountedSubcriptionPrice for the first 6 months then @DiscountedPermonthPrice monthly recurring </p>*@
               
            <p>&nbsp;</p>
                //using(@Html.BeginForm("termsinit","user"))
                using(@Html.BeginForm("indexpurchase","user", FormMethod.Post))
                {
                      <h2>Payment Details</h2>

                    <h3>Product Name</h3>
                        <p>Product Desciption. Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut.</p>

                        <h3>Select Your Subscription</h3>
                        <div class="row">
                            <div class="col-sm-4 border2 shadow">
                                <div class="monthSub">1 MONTH</div>
                                <div class="priceSub">@SalesCode.discountedPrice_A.ToString("C",culture)</div>
                                <div class="radioBg"><input type="radio" name="subscription" value="1"></div>
                            </div>

                            <div class="col-sm-4 border2 shadow">
                                <div class="monthSub">3 MONTHS</div>
                                <div class="priceSub">@SalesCode.discountedPrice_B.ToString("C",culture)</div>
                                <div class="radioBg"><input type="radio" name="subscription" value="2"></div>
                            </div>

                            <div class="col-sm-4 border2 shadow">
                                <div class="monthSub">6 MONTHS</div>
                                <div class="priceSub">@SalesCode.discountedPrice_C.ToString("C",culture)</div>
                                <div class="radioBg"><input type="radio" name="subscription" value="3"></div>
                            </div>
                        </div>
                        <br> <br>   

          
                        <br> 
                    <label>Quantity: </label><input type="text" name="quantity" class="form-control">  
                    <button type="submit" class="btn btn-lg btn-primary btn-block" style="width: 200px; float: right; margin-right: 5%;">Proceed  > > </button>
                }
            }
        </div>
    </div>

</div>
