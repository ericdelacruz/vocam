
@{
    ViewBag.Title = "changePassword";
    var username = Session["Username"].ToString().Substring(0, Session["Username"].ToString().IndexOf('@'));

}



<div class="container row portalContainer">

    <div class="portalWrap displayInline border">
        <div class="fr">
            <div class="logoutSec fr clearfix">Hi @username! @Html.ActionLink("(Logout)", "logout", "home")</div>
        </div>


        <div class="portalCont margin15">
            <div class="portalCont margin15">

                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3 style="margin-top:0px !important; padding-top:0px !important;" class="panel-title"><strong>Change Password</strong></h3>
                    </div>
                    <div class="panel-body">
                        <h3>
                            For security reasons, you are required to change your password. Please input the fields below:
                        </h3>
                        <form class="formSignin border clearfix">
                            <label>New Password</label><br />
                            <input type="password" class="form-control" name="password" placeholder="Enter password" required style="width:80%;" /><br />
                            <label>Confirm New Password</label><br />
                            <input type="password" class="form-control" name="password" placeholder="Re-enter password" required style="width:80%;" />
                            <br /> <br />
                            <div class="clearfix">
                                <button style="width:80%;" type="button" class="fl btn btn-lg btn-primary">Update</button>

                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </div>

       
    </div>
</div>
