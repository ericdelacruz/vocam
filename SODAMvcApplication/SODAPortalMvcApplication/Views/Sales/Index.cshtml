@model IEnumerable<SODAPortalMvcApplication.ViewModel.ReportViewModel>
@{
    ViewBag.Title = "Index";
    var user = Session["Username"].ToString();
    user = user.Substring(0, user.IndexOf('@'));
}

<div class="portalWrap border">
    <div class="fr">
        <ul class="portalUserMenu">
            <li style="padding-left:0px;"><a href="@Url.Action("Index")">REPORTS</a></li>
            <li><a href="@Url.Action("AddUser")">ADD USER</a></li>
        </ul> <!-- end of portal user menu-->
        <div class="logoutSec fr clearfix">Hi @user! <a href=@Url.Action("logout","home")>(logout)</a></div>
    </div>

    <div class="portalCont margin15">
        <h2>Report</h2>
        @using(@Html.BeginForm("index","sales", FormMethod.Post))
        { 
        <div class="panel-body">
            From Date: <input type="text" id="popupDatepicker" class="form-control" placeholder="Click to choose date" name="start"> 
            To Date: <input type="text" id="popupDatepicker2" class="form-control" placeholder="Click to choose date" name="end"> 
            <button class="btn btn-s btn-primary" type="submit">VIEW REPORT</button>
        </div>
        }
         <p>&nbsp;</p>
        <table class="portTable">

            <thead>
                <tr style="background-color:#fff;">
                    <th>Purchase Date</th>
                    <th>Contract End Date</th>
                    <th>Company</th>
                    <th>Full Name</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var subscriber in Model)
                {

                    <tr>
                    <td width="170">@string.Format("{0:MMM dd yyyy}", subscriber.customer.DatePurchase)</td>
                     <td width="170">@subscriber.customer.DateSubscriptionEnd</td>
                     <td width="170">@subscriber.account.Company</td>
                    <td width="200">@subscriber.account.FirstName +" "+@subscriber.account.LastName</td>
                    <td width="100">@subscriber.salesCode.Sales_Code</td>
                   </tr>
                }
               


            </tbody>
        </table>

    </div>
</div>
